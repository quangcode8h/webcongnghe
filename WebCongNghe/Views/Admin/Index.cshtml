@model WebCongNghe.Models.Admins
@{
    ViewData["Title"] = "Đăng nhập quản trị admin";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!-- header đăng nhập, đăng kí -->
    <header class="headerLogin">
        <div class="headerLogin-logo">
            <a href="@Url.Action("Index", "Home")">
                <b>ShopCongNghe</b>.pro
            </a>
            <p>Đăng Nhập Quản Trị Website</p>
        </div>
        <div class="headerLogin-question"><a href="#">Bạn cần giúp đỡ ?</a></div>
    </header>
    <!-- form dang nhap khi click vao button tren header-->
    <div class="Login">
        @using (Html.BeginForm("Validate", "Admin", FormMethod.Post, new {@class = "form-Login"}))
        {
            @Html.AntiForgeryToken()
            <div class="form-Login_title">Đăng Nhập Với Quyền Admin</div>
            <div class="form-Login-input">
                @Html.TextBoxFor(model => model.account, "", new {@placeholder = "Nhập tên tài khoản admin" })
                @Html.ValidationMessageFor(model => model.account, "", new { @class = "text-danger" })
                @Html.TextBoxFor(model => model.password, "", new {@placeholder = "Nhập mật khẩu", @type = "password" })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
            <div class="form-Login-btn"><button type="submit" name="submit" id="submit-signup">Đăng Nhập</button></div>
        }
    </div>

@{
    if (!string.IsNullOrEmpty(ViewBag.LoginError))
    {
        <script>
            alert("Sai tên tài khoản hoặc mật khẩu");
        </script>
    }
}