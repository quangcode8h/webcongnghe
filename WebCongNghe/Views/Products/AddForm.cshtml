@model WebCongNghe.Models.Entities.SanPham
@{
    ViewData["Title"] = "AddForm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var listSubcategory = ViewBag.listSubcategory;
    var listProducer = ViewBag.listProducer;
}
<a href="~/Products/MaintaintProducts">Về trang quản trị</a>
<div class="row justify-content-md-center">
    @using (Html.BeginForm("Add", "Products", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="card">
                <div class="card-header">
                    <div class="card-title text-center">
                        <h1>Thêm mới sản phẩm</h1>
                    </div>
                </div>
                <div class="card-body pl-4 pr-4">
                    <div class="form-group">
                        <label>Tên sản phẩm:</label>
                        @Html.TextBoxFor(m => m.TenSp, "", new { @class = "form-control", @placeholder = "Tên sản phẩm" })
                        @Html.ValidationMessageFor(m => m.TenSp, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Chi tiết sản phẩm:</label>
                        @Html.TextBoxFor(m => m.ChiTiet, "", new { @class = "form-control", @placeholder = "Chi tiết" })
                        @Html.ValidationMessageFor(m => m.ChiTiet, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Giá:</label>
                        @Html.TextBoxFor(m => m.Gia, "", new { @class = "form-control", @placeholder = "Giá" })
                        @Html.ValidationMessageFor(m => m.Gia, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Màu:</label>
                        @Html.TextBoxFor(m => m.Mau, "", new { @class = "form-control", @placeholder = "Màu" })
                        @Html.ValidationMessageFor(m => m.Mau, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Số lượng:</label>
                        @Html.TextBoxFor(m => m.SoLuong, "", new { @class = "form-control", @placeholder = "Số lượng" })
                        @Html.ValidationMessageFor(m => m.SoLuong, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Link ảnh 1:</label>
                        @Html.TextBoxFor(m => m.Anh1, "", new { @class = "form-control", @placeholder = "Ảnh 1" })
                        @Html.ValidationMessageFor(m => m.Anh1, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Link ảnh 2:</label>
                        @Html.TextBoxFor(m => m.Anh2, "", new { @class = "form-control", @placeholder = "Ảnh 2" })
                        @Html.ValidationMessageFor(m => m.Anh2, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Link ảnh 3:</label>
                        @Html.TextBoxFor(m => m.Anh3, "", new { @class = "form-control", @placeholder = "Ảnh 3" })
                        @Html.ValidationMessageFor(m => m.Anh3, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Link ảnh 4:</label>
                        @Html.TextBoxFor(m => m.Anh4, "", new { @class = "form-control", @placeholder = "Ảnh 4" })
                        @Html.ValidationMessageFor(m => m.Anh4, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Ngày cập nhật:</label>
                        @Html.TextBoxFor(m => m.NgayCapNhat, "", new { @class = "form-control", @placeholder = "Ngày cập nhật", @type="date" })
                        @Html.ValidationMessageFor(m => m.NgayCapNhat, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <label>Trạng thái:</label>
                        @Html.TextBoxFor(m => m.TrangThai, "", new { @class = "form-control", @placeholder = "Trạng thái" })
                        @Html.ValidationMessageFor(m => m.TrangThai, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                         <label>Danh mục con:</label>
                        <select asp-for="@Model.MaDmcon" asp-items="@(new SelectList(listSubcategory, nameof(listSubcategory.MaDmcon),nameof(listSubcategory.TenDmcon)))" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                         <label>Nhà sản xuất:</label>
                        <select asp-for="@Model.MaNsx" asp-items="@(new SelectList(listProducer, nameof(listProducer.MaNsx),nameof(listProducer.TenNsx)))" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Khuyến mại:</label>
                        @Html.TextBoxFor(m => m.KhuyenMai, "", new { @class = "form-control", @placeholder = "Khuyến mại" })
                        @Html.ValidationMessageFor(m => m.KhuyenMai, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group d-flex justify-content-center">
                        <input type="submit" name="submit" class="btn btn-primary" value="Lưu"/>
                    </div>
                </div>
        </div>
    
    }
</div>

