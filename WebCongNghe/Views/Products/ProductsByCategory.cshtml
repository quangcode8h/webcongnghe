
@{
    ViewData["Title"] = "ProductsByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listProductsByCategory = ViewBag.listProductsByCategory;
    var nameCategory = ViewBag.nameCategory;
    var nameSubCategory = ViewBag.nameSubCategory;
    var product = new Products();
}

@*danh sách sản phẩm theo danh mục con*@
<section class="_1khoi sachmoi bg-white">
    <div class="container">
        <div class="noidung" style=" width: 100%;">
            <div class="row">
                <!--header-->
                <div class="col-12 d-flex justify-content-between align-items-center pb-2 bg-transparent pt-4">
                    <ol class="breadcrumb mb-0 p-0 bg-transparent">
                        <li class="breadcrumb-item"><a href="@Url.Action("index", "Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="#">@nameCategory</a></li>
                        <li class="breadcrumb-item active"><a href="#">@nameSubCategory</a></li>
                    </ol>
                </div>
            </div>
            <div class="row" style="padding-bottom: 2rem;">
                <!-- 1 san pham -->
                @{
                    foreach(var item in listProductsByCategory)
                    {
                        <div class=" col-2">
                        <a href="@Url.Action("Details", "Products", new {id = item.MaSp})" class="motsanpham"
                            style="text-decoration: none; color: black;" data-toggle="tooltip" data-placement="bottom">
                            <img class="card-img-top anh" src="@Url.Content(item.Anh1)"
                                alt="image">
                            <div class="card-body noidungsp mt-3">
                                <h3 class="card-title ten">@item.TenSp</h3>
                                <small class="tacgia text-muted">@product.getNameProducer(item.MaNsx)</small>
                                <div class="gia d-flex align-items-baseline">
                                    <div class="giamoi">@String.Format("{0:n0} đ ", item.Gia - (item.Gia * item.KhuyenMai)/100)</div>
                                    <div class="sale">@String.Format("-{0}%", item.KhuyenMai)</div>
                                </div>
                                <div class="danhgia">
                                    <ul class="d-flex" style="list-style: none;">
                                        <li class="active"><i class="fa fa-star"></i></li>
                                        <li class="active"><i class="fa fa-star"></i></li>
                                        <li class="active"><i class="fa fa-star"></i></li>
                                        <li class="active"><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><span class="text-muted">0 nhận xét</span></li>
                                    </ul>
                                </div>
                            </div>
                        </a>
                    </div>
                    }
                }
                    
                </div>
            </div>
        </div>
</section>

